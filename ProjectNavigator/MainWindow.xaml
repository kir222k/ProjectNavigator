    <!--ГЛАВНЫЙ ГРИД-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="50" MaxHeight="50"/>
            <RowDefinition/>
            <RowDefinition MinHeight="30" MaxHeight="30"/>
        </Grid.RowDefinitions>

        <!--<Menu>
            
            <MenuItem HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Content="Up" Height="50" Width="125"/>
            </MenuItem>
        </Menu>-->
        
        
        <!--ТАБ ОСНОВНОЙ-->
        <TabControl Grid.Row="1" >
            
            <TabItem Header="Чертежи"  RenderTransformOrigin="0.5,0.5" Height="35" FontSize="14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <!--ДОКУМЕНТЫ-->
                <!-- ДАННЫЕ ДОКУМЕНТА И РЕВИЗИИ-->
                </TabItem>

            <TabItem Header="Статистика"  RenderTransformOrigin="0.5,0.5" FontSize="14">
                    <Grid>

                    </Grid>
                </TabItem>

            <TabItem Header="Структура"  RenderTransformOrigin="0.5,0.5" FontSize="14">
                <Grid>
                    <Border  Background="LightBlue"/>
                    <TabControl  >
                    <!--БЛОКИ-->
                    <TabItem  Header="Блоки" RenderTransformOrigin="0.5,0.5" >
                        <!--<Grid>-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>

                            <!--ГРИД ДЛЯ БЛОКОВ.-->
                            <DataGrid Grid.Row="0"
                                        x:Name="BlocksList" ItemsSource="{Binding }" AutoGenerateColumns="False" >
                                <DataGrid.Columns>

                                    <DataGridTemplateColumn Header="Блок" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding BlockName}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTemplateColumn Header="Примеч." >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Label Content="{Binding Note}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Добавить" Margin="10" Click="Add_Block_Click" />
                                <Button Content="Изменить" Margin="10" Click="Edit_Block_Click"  />
                                <Button Content="Удалить" Margin="10" Click="Delete_Block_Click"  />
                            </StackPanel>
                        </Grid>
                        <!--</Grid>-->
                </TabItem>

                <!--УРОВНИ-->
                <TabItem Header="Уровни" RenderTransformOrigin="0.5,0.5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <!--ГРИД ДЛЯ БЛОКОВ.-->
                        <DataGrid Grid.Row="0"
                                        x:Name="LevelsList" ItemsSource="{Binding }" AutoGenerateColumns="False" >
                            <DataGrid.Columns>

                                <DataGridTemplateColumn Header="Уровень" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding LevelName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Примеч." >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Note}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Добавить" Margin="10" Click="Add_Level_Click" />
                            <Button Content="Изменить" Margin="10" Click="Edit_Level_Click"  />
                            <Button Content="Удалить" Margin="10" Click="Delete_Level_Click"  />
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--КОМПЛЕКТЫ-->
                <TabItem x:Name="TabPack" Header="Комплекты" RenderTransformOrigin="0.5,0.5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <!--ГРИД ДЛЯ БЛОКОВ.-->
                        <DataGrid Grid.Row="0"
                                        x:Name="PacksList" ItemsSource="{Binding }" AutoGenerateColumns="False" >
                            <DataGrid.Columns>

                                <DataGridTemplateColumn Header="Комплект" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding PackName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Примеч." >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Note}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Добавить" Margin="10" Click="Add_Pack_Click" />
                            <Button Content="Изменить" Margin="10" Click="Edit_Pack_Click"  />
                            <Button Content="Удалить" Margin="10" Click="Delete_Pack_Click"  />
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!--РАЗРАБ-->
                <TabItem  Header="Разработчики" RenderTransformOrigin="0.5,0.5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <!--ГРИД ДЛЯ РАЗРАБ.-->
                        <DataGrid Grid.Row="0"
                                        x:Name="DevsList" ItemsSource="{Binding }" AutoGenerateColumns="False" >
                            <DataGrid.Columns>

                                <DataGridTemplateColumn Header="Разраб." >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Developer}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Компания" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding FullCompanyName}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Контакты" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Contacts}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Статус" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding DesignStatus}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="Примеч." >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Note}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Добавить" Margin="10" Click="Add_Dev_Click" />
                            <Button Content="Изменить" Margin="10" Click="Edit_Dev_Click"  />
                            <Button Content="Удалить" Margin="10" Click="Delete_Dev_Click"  />
                        </StackPanel>
                    </Grid>
                </TabItem>

        </TabControl>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Background="LightGray" Grid.Row="2" />
    </Grid>
</Window>
